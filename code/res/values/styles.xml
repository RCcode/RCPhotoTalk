        <item name="android:textColor">#4B5164</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- facebook end -->
    <style name="text_base">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="login_edittext" parent="text_base">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/default_gap</item>
    </style>

    <style name="listview_base">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:cacheColorHint">@null</item>
    </style>

    <style name="expand_listview_base" parent="listview_base">
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:groupIndicator">@null</item>
    </style>

    <style name="pageIndicator">
        <item name="dotDrawable">@drawable/gd_page_indicator_dot</item>
    </style>

