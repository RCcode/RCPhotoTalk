<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_info_detail"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/user_detail_bg_height"
            android:scaleType="centerCrop"
            android:src="@drawable/user_detail_bg" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@id/iv_bg"
            android:layout_alignTop="@+id/rela_userinfo"
            android:layout_marginTop="30dp"
            android:background="#50000000" />

        <LinearLayout
            android:id="@+id/rela_userinfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_detail_user_infos_height"
            android:layout_alignBottom="@+id/iv_bg"
            android:layout_marginBottom="@dimen/user_detail_user_infos_bottom_margin" >

            <RelativeLayout
                android:layout_width="@dimen/user_head_image_width_bg"
                android:layout_height="@dimen/user_head_image_width_bg"
                android:layout_gravity="center_vertical"
                android:background="@drawable/send_friend_head_bg"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="@dimen/user_detail_head_image_width"
                    android:layout_height="@dimen/user_detail_head_image_width"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/user_detail_source_margin_left"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/default_head" />
                 <ImageView
                    android:id="@+id/iv_country_flag"
                    android:layout_width="@dimen/user_detail_country_width"
                    android:layout_height="@dimen/user_detail_country_width" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/user_detail_head_width_half"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="5dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/text_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/friend_info_nick_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/tv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/boy_icon" />

                        <TextView
                            android:id="@+id/tv_sex_age"
                            style="@style/text_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/friend_info_age_left"
                            android:textColor="#E5E5E5"
                            android:textSize="@dimen/friend_info_age_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/text_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RC ID:"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/friend_info_rcid_text_size" />

                        <TextView
                            android:id="@+id/tv_rcid"
                            style="@style/text_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/friend_info_app_left"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/friend_info_rcid_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/directory_icon" />

                        <TextView
                            android:id="@+id/tv_source_name"
                            style="@style/text_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/friend_info_name_left"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_source_value"
                            style="@style/text_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/friend_info_phone_left"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/friend_info_app_left"
        android:layout_marginRight="@dimen/friend_info_app_right"
        android:background="@drawable/app_list_bg" />

    <Button
        android:id="@+id/btn_perform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/friend_info_send_top"
        android:layout_marginLeft="@dimen/friend_info_app_left"
        android:layout_marginRight="@dimen/friend_info_app_right"
        android:layout_marginTop="@dimen/friend_info_app_right"
        android:background="@drawable/friend_info_send_btn"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>