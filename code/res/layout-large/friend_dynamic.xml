<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pull="http://schemas.android.com/apk/res/com.rcplatform.phototalk"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/app_backgroud">

    <include layout="@layout/base_top_navigate" />

<com.rcplatform.phototalk.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/friend_dynamic_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        pull:ptrMode="both"
        pull:ptrAnimationStyle="flip"
        android:smoothScrollbar="true" />
</RelativeLayout>