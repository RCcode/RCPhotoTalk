<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/friend_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/default_head" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/friend_item_bg" />

    <TextView
        android:id="@+id/send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="6H ago"
        android:textColor="#B1B1B1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/friend_head"
        android:layout_toLeftOf="@id/send_time"
        android:layout_marginLeft="20dp"
        android:orientation="vertical" >
        <TextView android:id="@+id/friend_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1B1B1B"
            android:textSize="18sp"
            android:text="张三"/>
        <!-- 中间部分字体颜色设置 在代码中进行设置 -->
        <TextView android:id="@+id/friend_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B1B1B1"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:text="将Leon加为好友"/>
        
    </LinearLayout>

</RelativeLayout>