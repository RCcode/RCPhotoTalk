<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp" >

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/facebook_ppv"
        android:layout_width="@dimen/head_image_width"
        android:layout_height="@dimen/head_image_width" />

    <TextView
        android:id="@+id/tv_nick"
        style="@style/text_base"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/cb_invite"
        android:layout_toRightOf="@+id/facebook_ppv" />

    <CheckBox
        android:id="@+id/cb_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
         />

</RelativeLayout>