<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drift_bg" >

    <include
        android:id="@+id/title"
        layout="@layout/base_top_navigate" />

    <com.rcplatform.phototalk.views.SnapListView
        android:id="@+id/lv_drift"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none" >
    </com.rcplatform.phototalk.views.SnapListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_throw_drift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_throw" />

        <Button
            android:id="@+id/btn_get_drift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_fish" />
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/drift_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/home_init_page_2" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/stranger_init_padding_bottom"
                android:layout_marginLeft="@dimen/stranger_init_padding"
                android:layout_marginRight="@dimen/stranger_init_padding"
                android:text="@string/show_init_message_1"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/home_init_page_3" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/stranger_init_padding_bottom"
                android:layout_marginLeft="@dimen/stranger_init_padding"
                android:layout_marginRight="@dimen/stranger_init_padding"
                android:text="@string/show_init_message_2"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </ViewFlipper>

</RelativeLayout>