<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.rcplatform.phototalk.views.CameraView
        android:id="@+id/sf_camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/take_photo_bottom" >

        <Button
            android:id="@+id/btn_close_take_photo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/take_photo_left"
            android:background="@drawable/close_edit_button_selector" />

        <LinearLayout
            android:id="@+id/linear_vc_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:id="@+id/iv_camera"
                android:src="@drawable/take_camera" />

            <CheckBox
                android:id="@+id/switch_vc"
                android:layout_width="58dp"
                android:layout_height="13dp"
                android:background="@drawable/vc_change"
                android:button="@null"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_video"
                android:src="@drawable/take_video" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/take_photo_bottom" >

        <Button
            android:id="@+id/btn_take_photo_flashlight"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/take_photo_left"
            android:background="@drawable/open_flash_light_button_selector" />

        <Button
            android:id="@+id/btn_take_photo_change_camera"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/take_photo_left"
            android:background="@drawable/change_camera_button_selector" />

        <Button
            android:id="@+id/btn_take_photo_take"
            android:layout_width="@dimen/record_button_width"
            android:layout_height="@dimen/record_button_width"
            android:layout_centerInParent="true"
            android:background="@drawable/take_photo_btn" />

        <RelativeLayout
            android:id="@+id/btn_take_video"
            android:layout_width="@dimen/record_button_width"
            android:layout_height="@dimen/record_button_width"
            android:layout_centerInParent="true"
            android:background="@drawable/take_video_bg"
            android:clickable="true" >

            <com.rcplatform.phototalk.views.VideoRecordProgressView
                android:id="@+id/video_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_video_record_atttention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>