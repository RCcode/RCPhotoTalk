<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_info_detail"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_rcid"
        style="@style/text_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/friend_info_app_left"
        android:layout_marginTop="@dimen/friend_info_title_top"
        android:text="RC ID : 45678"
        android:textColor="#74554a"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/friend_info_app_left" >

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/user_detail_bg_height"
            android:scaleType="centerCrop"
            android:src="@drawable/user_detail_bg" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@id/iv_bg"
            android:layout_alignTop="@+id/rela_userinfo"
            android:background="#50000000"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/rela_userinfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_detail_user_infos_height"
            android:layout_alignBottom="@+id/iv_bg"
            android:layout_marginBottom="@dimen/user_detail_user_infos_bottom_margin" >

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/user_detail_head_image_width"
                android:layout_height="@dimen/user_detail_head_image_width"
                android:layout_marginLeft="@dimen/friend_info_app_left"
                android:layout_marginRight="@dimen/user_detail_source_margin_left"
                android:background="@drawable/default_head" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/friend_info_left"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/user_detail_head_width_half"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="5dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/text_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/btn_edit"
                            style="@style/text_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/friend_info_edit_left"
                            android:background="@drawable/friend_info_edit_btn" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/friend_info_sex_layout_top"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/tv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/boy_icon" />

                        <TextView
                            android:id="@+id/tv_sex_age"
                            style="@style/text_base"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/friend_info_age_left"
                            android:text="24"
                            android:textColor="#E5E5E5" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/user_detail_head_width_half"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/directory_icon" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/text_base"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/friend_info_name_left"
                        android:text="赵楠"
                        android:textColor="#4f3e36" />

                    <TextView
                        android:id="@+id/tv_source"
                        style="@style/text_base"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/friend_info_phone_left"
                        android:text="12354566543"
                        android:textColor="#8a837b" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.rcplatform.phototalk.views.HorizontalListView
        android:id="@+id/hlv_apps"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_list_height"
        android:layout_below="@+id/infos"
        android:layout_marginLeft="@dimen/friend_info_app_left"
        android:layout_marginRight="@dimen/friend_info_app_right"
        android:background="@drawable/app_list_bg"
        android:padding="10dp" />
    <!-- </RelativeLayout> -->

    <Button
        android:id="@+id/btn_perform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_infos"
        android:layout_marginBottom="@dimen/friend_info_send_top"
        android:layout_marginLeft="@dimen/friend_info_app_left"
        android:layout_marginRight="@dimen/friend_info_app_right"
        android:layout_marginTop="@dimen/friend_info_send_top"
        android:background="@drawable/friend_info_send_btn"
        android:textColor="#FFFFFF" />

</LinearLayout>