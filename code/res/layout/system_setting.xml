<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_backgroud"
    android:orientation="vertical" >

    <include layout="@layout/base_top_navigate" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_gap"
        android:layout_marginTop="@dimen/default_gap_2x"
        android:gravity="left"
        android:text="@string/receive_setting"
        android:textColor="#919191"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/rela_resetting"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/default_gap"
        android:layout_marginRight="@dimen/default_gap"
        android:layout_marginTop="@dimen/default_gap_2x"
        android:background="@drawable/edit_fields_background" >

        <TextView
            android:id="@+id/tv_resetting_current"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_toLeftOf="@+id/re_to_right"
            android:gravity="left"
            android:textColor="#313131"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/re_to_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_gap"
            android:src="@drawable/app_arrow" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_gap"
        android:layout_marginTop="@dimen/default_gap_2x"
        android:gravity="left"
        android:text="@string/dynamic_setting"
        android:textColor="#919191"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/rela_dysetting"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/default_gap"
        android:layout_marginRight="@dimen/default_gap"
        android:layout_marginTop="@dimen/default_gap_2x"
        android:background="@drawable/edit_fields_background" >

        <TextView
            android:id="@+id/tv_dysetting_current"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_toLeftOf="@+id/dy_to_right"
            android:gravity="left"
            android:textColor="#313131"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/dy_to_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/default_gap"
            android:src="@drawable/app_arrow" />
    </RelativeLayout>

</LinearLayout>