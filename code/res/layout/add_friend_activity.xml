<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_friend_activity_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f3f3" >

    <include layout="@layout/base_top_navigate" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/default_gap_2x"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/add_friend_search_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_marginRight="@dimen/default_gap"
            android:layout_marginTop="@dimen/default_gap"
            android:background="@drawable/popup_btn" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dip"
                android:src="@drawable/add_friend_search_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_gap_2x"
                android:gravity="center_vertical"
                android:text="@string/add_friend_search_key_hint_text"
                android:textColor="#3f3f3f"
                android:textSize="16sp" />
        </RelativeLayout>
        <!-- style="@style/contentTextStyle" -->

        <RelativeLayout
            android:id="@+id/add_friend_from_phonebook_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/add_friend_search_layout"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_marginRight="@dimen/default_gap"
            android:layout_marginTop="@dimen/default_gap_2x"
            android:background="@drawable/popup_btn" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_gap_2x"
                android:gravity="center_vertical"
                android:text="@string/add_friend_from_phonebook_hint_text"
                android:textColor="#3f3f3f"
                android:textSize="16sp" >
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/default_gap"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_friend_from_facebook_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/add_friend_from_phonebook_layout"
             android:layout_marginLeft="@dimen/default_gap"
            android:layout_marginRight="@dimen/default_gap"
            android:layout_marginTop="@dimen/default_gap_2x"
            android:background="@drawable/popup_btn" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_gap_2x"
                android:gravity="center_vertical"
                android:text="@string/add_friend_from_facebook_hint_text"
                android:textColor="#3f3f3f"
                android:textSize="16sp" >
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/default_gap"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>