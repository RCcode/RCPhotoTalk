<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_backgroud" >

    <include
        android:id="@+id/title_navigate"
        layout="@layout/base_top_navigate" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/send_layout"
        android:layout_below="@+id/title_navigate"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="53dp"
            android:background="@drawable/seach_bg" >

            <EditText
                android:id="@+id/et_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/seach_edit_text"
                android:imeOptions="actionSearch"
                android:paddingLeft="35dp"
                android:singleLine="true"
                android:textColor="#3f3f3f"
                android:textSize="14sp" />

            <Button
                android:id="@+id/seach_delete_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignRight="@+id/et_search"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/seach_text_delete_btn" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_stranges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/know_strangers_bg" >

            <ImageView
                android:id="@+id/strange_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/friend_head_left"
                android:src="@drawable/know_strangers_icon" />

            <TextView
                style="@style/text_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/cb_strange"
                android:layout_toRightOf="@+id/strange_icon"
                android:text="@string/know_strangers"
                android:textColor="@color/black"
                android:textSize="@dimen/select_friend_text_name" />

            <CheckBox
                android:id="@+id/cb_strange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/btn_check"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_sfl_friends"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:fadingEdge="none" >
        </ListView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/send_layout"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/select_send_bottom_bg" >

        <com.rcplatform.phototalk.views.HorizontalListView
            android:id="@+id/g_sfl_added_friends"
            android:layout_width="fill_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_toLeftOf="@+id/btn_sfl_send"
            android:scrollbars="none" />
        <!--
          <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:id="@+id/gridview_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <GridView
                        android:id="@+id/g_sfl_added_friends"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:columnWidth="60dp"
                        android:horizontalSpacing="0dp"
                        android:numColumns="auto_fit"
                        android:scrollbars="none"
                        android:stretchMode="none" />
                </LinearLayout>
            </FrameLayout>
        </HorizontalScrollView>
        -->

        <Button
            android:id="@+id/btn_sfl_send"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/seach_send_btn" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_select_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>