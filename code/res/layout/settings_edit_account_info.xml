<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/add_friend_activity_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/app_backgroud">

    <include layout="@layout/base_top_navigate" android:id="@+id/title"/>

    <ScrollView
        android:id="@id/settings_general_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:fadingEdge="none"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- line1 -->

            <com.rcplatform.phototalk.views.RoundImageView
                android:id="@id/settings_account_head_portrait"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:background="@drawable/send_friend_head_bg"
                android:gravity="center"
                android:src="@drawable/default_head" />

            <RelativeLayout
                android:id="@+id/rela_edit_nick"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/popup_btn" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:gravity="center_vertical"
                    android:textColor="#313131"
                    android:textSize="20sp"
                    android:text="@string/nick" >
                </TextView>

                <TextView
                    android:id="@+id/settings_modify_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:layout_marginRight="@dimen/default_gap"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <RelativeLayout
              android:id="@+id/rela_edit_sex"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/popup_btn" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:gravity="center_vertical"
                    android:textColor="#313131"
                    android:textSize="20sp"
                    android:text="@string/sex" >
                </TextView>

                <TextView
                    android:id="@+id/settings_modify_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:layout_marginRight="@dimen/default_gap"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela_edit_birthday"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/popup_btn" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:textColor="#313131"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:text="@string/birthday" >
                </TextView>

                <TextView
                    android:id="@+id/settings_modify_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:layout_marginRight="@dimen/default_gap"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center_vertical" />
            </RelativeLayout>

       
        </LinearLayout>
    </ScrollView>

</RelativeLayout>