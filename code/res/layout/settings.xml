<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/add_friend_activity_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_backgroud" >

    <include layout="@layout/base_top_navigate" />

    <ScrollView
        android:id="@id/settings_general_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:fadingEdge="none"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/title"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_info_detail"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rela_infos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/user_bg"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="@dimen/user_detail_bg_height"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_detail_bg" />

                    <Button
                        android:id="@+id/settings_user_info_edit_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/user_info_edit_btn" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignBottom="@id/user_bg"
                        android:layout_alignTop="@+id/rela_userinfo"
                        android:background="#50000000"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/rela_userinfo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/user_detail_user_infos_height"
                        android:layout_alignBottom="@+id/user_bg"
                        android:layout_marginBottom="@dimen/user_detail_user_infos_bottom_margin"
                        android:background="@color/TRANSPARENT"
                        android:padding="@dimen/user_detail_info_padding" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/send_friend_head_bg" >

                            <com.rcplatform.phototalk.views.RoundImageView
                                android:id="@+id/settings_account_head_portrait"
                                android:layout_width="@dimen/user_detail_head_image_width"
                                android:layout_height="@dimen/user_detail_head_image_width"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="@dimen/user_detail_source_margin_left"
                                android:background="@drawable/send_friend_head_bg"
                                android:gravity="center" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/user_detail_head_width_half"
                                android:gravity="bottom"
                                android:orientation="vertical"
                                android:paddingBottom="5dp" >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/settings_user_nick"
                                        style="@style/text_base"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Name"
                                        android:textStyle="bold"
                                        android:textColor="#FFFFFF"
                                        android:textSize="@dimen/user_detail_nick_size" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/tv_sex"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:background="@drawable/boy_icon" />

                                    <TextView
                                        android:id="@+id/tv_sex_age"
                                        style="@style/text_base"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="top"
                                        android:layout_gravity="top"
                                        android:layout_marginTop="-3dp"
                                        android:layout_marginLeft="@dimen/friend_info_age_left"
                                        android:text="24"
                                        android:textColor="#E5E5E5" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <TextView
                                    style="@style/text_base"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/user_detail_head_width_half"
                                    android:text="RC ID:"
                                    android:layout_marginTop="10dp"
                                    android:textColor="#534d48"
                                    android:textSize="@dimen/user_detail_rcid_size" />

                                <TextView
                                    android:id="@+id/user_rc_id"
                                    style="@style/text_base"
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="@dimen/user_detail_head_width_half"
                                    android:text="123456"
                                    android:textColor="#534d48"
                                    android:textSize="@dimen/user_detail_rcid_size" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <com.rcplatform.phototalk.views.HorizontalListView
                    android:id="@+id/my_friend_details_apps_listview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_list_height"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/friend_info_app_left"
                    android:layout_marginRight="@dimen/friend_info_app_right"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/app_list_bg"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_gap"
                android:layout_marginRight="@dimen/default_gap"
                android:layout_marginTop="14dp"
                android:background="@drawable/popup_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@id/settings_account_tacotyid_pandle"
                    android:layout_width="match_parent"
                    android:layout_height="44dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:gravity="center_vertical"
                        android:text="好友动态"
                        android:textColor="#313131" >
                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_back" />

                <RelativeLayout
                    android:id="@+id/use_account_message"
                    android:layout_width="match_parent"
                    android:layout_height="44dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:gravity="center_vertical"
                        android:text="我的帐号"
                        android:textColor="#313131" >
                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_back" />

                <RelativeLayout
                    android:id="@+id/settings_user_edit_rc_id_action"
                    android:layout_width="match_parent"
                    android:layout_height="44dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:gravity="center_vertical"
                        android:text="设置"
                        android:textColor="#313131" >
                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_back" />

                <RelativeLayout
                    android:id="@+id/rela_about"
                    android:layout_width="match_parent"
                    android:layout_height="44dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:gravity="center_vertical"
                        android:text="@string/about"
                        android:textColor="#313131" >
                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@id/settings_clean_history_record_btn"
                style="@style/LandingPageButton"
                android:layout_marginLeft="@dimen/default_gap"
                android:layout_marginRight="@dimen/default_gap"
                android:layout_marginTop="@dimen/default_gap_2x"
                android:background="@drawable/friend_info_send_btn"
                android:text="@string/setting_page_clean_history"
                android:layout_marginBottom="@dimen/default_gap_3x"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@id/login_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_fields"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/default_gap_2x"
        android:visibility="gone" />

</RelativeLayout>