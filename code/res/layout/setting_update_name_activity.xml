<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:background="@drawable/app_backgroud" android:layout_width="match_parent" android:layout_height="match_parent">  
  <include layout="@layout/base_top_navigate"/>  
  <RelativeLayout android:layout_width="fill_parent" android:layout_below="@id/title" android:layout_height="wrap_content"> 
    <ImageView android:id="@id/login_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignRight="@id/login_fields" android:layout_marginTop="@dimen/login_margin_top" android:visibility="gone" android:src="@drawable/login_top"/>  
    <LinearLayout android:id="@id/reg_bubble" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="@dimen/login_margin_top" android:gravity="center" android:orientation="vertical"> 
      <TextView android:id="@+id/update_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_gap_2x" android:layout_marginRight="@dimen/default_gap_2x" android:text="@string/forget_password_text_hint" android:textStyle="bold"/> 
    </LinearLayout>  
    <LinearLayout android:id="@id/login_fields" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/reg_bubble" android:layout_marginLeft="@dimen/default_gap_2x" android:layout_marginRight="@dimen/default_gap_2x" android:background="@drawable/edit_fields_background" android:orientation="vertical"> 
      <EditText android:id="@+id/settings_update_edit" android:layout_width="fill_parent" android:layout_height="@dimen/ui_element_unit" android:background="@null" android:maxLength="60" android:padding="@dimen/default_gap" android:drawableBottom="@drawable/edit_button_selector" android:textColor="@android:color/black"/> 
    </LinearLayout>  
    <Button android:id="@+id/settings_update_confirm_button" style="@style/LandingPageButton" android:layout_below="@id/login_fields" android:layout_marginLeft="@dimen/default_gap_2x" android:layout_marginRight="@dimen/default_gap_2x" android:layout_marginTop="@dimen/default_gap_2x" android:background="@drawable/login_btn" android:text="@string/ok" android:textColor="@android:color/white"/>  
    <ProgressBar android:id="@id/login_progressbar" style="?android:attr/progressBarStyle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/login_fields" android:layout_centerHorizontal="true" android:layout_marginTop="@dimen/default_gap_2x" android:visibility="gone"/> 
  </RelativeLayout> 
</RelativeLayout>
